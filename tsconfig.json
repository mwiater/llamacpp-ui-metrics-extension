{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "types": [
      "chrome"
    ]
  },
  "include": [
    "*.js",
    "src/**/*.js"
  ],
  "exclude": [
    "tests/**"
  ]
}
